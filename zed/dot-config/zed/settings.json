// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run the `open default settings` command
// from the command palette or from `Zed` application menu.
{
  "ssh_connections": [
    {
      "host": "pi",
      "projects": [
        {
          "paths": ["~/docker"]
        }
      ]
    },
    {
      "host": "nuc",
      "projects": [
        {
          "paths": ["~/beancount-data"]
        }
      ]
    }
  ],
  "features": {
    "inline_completion_provider": "none"
  },
  "project_panel": {
    "auto_fold_dirs": true,
    "folder_icons": false,
    "indent_size": 8
  },
  "theme": {
    "mode": "system",
    "light": "Flexoki Light",
    "dark": "Ros√© Pine Moon"
  },
  "preferred_line_length": 100,
  "telemetry": {
    "metrics": false
  },
  "ui_font_family": "MonoLisa Trial",
  "ui_font_size": 16,
  "buffer_font_family": "MonoLisa Trial",
  "buffer_font_size": 16.0,
  "terminal": {
    "font_family": "MonoLisa Trial",
    "font_size": 14
  },
  "tab_size": 2,
  "languages": {
    "Just": {
      "tab_size": 4
    },
    "JSON": {
      "tab_size": 2,
      "format_on_save": "off"
      // "formatter": {
      //   "external": {
      //     "command": "jq",
      //     "arguments": ["-S", ".", "{buffer_path}"]
      //   }
      // }
      // "prettier": {
      //   "allowed": true,
      //   "parser": "json"
      // }
    },
    "Rust": {
      "tab_size": 4
    },
    "Beancount": {
      "show_inline_completions": true,
      "tab_size": 2
    },
    "Swift": {
      "tab_size": 2,
      "format_on_save": "off"
    }
  },
  "lsp": {
    "yaml-language-server": {
      "yaml.schemaStore.enable": true
    },
    "sourcekit-lsp": {
      "binary": {
        "path": "/Applications/Xcode-16.1.0-rc.app/Contents/Developer/Toolchains/XcodeDefault.xctoolchain/usr/bin/sourcekit-lsp"
      }
    }
  },
  "language_models": {
    "openai": {
      "version": "1",
      "api_url": "https://openrouter.ai/api/v1",
      "available_models": [
        {
          "display_name": "Qwen2.5-coder-32B-instruct",
          "name": "qwen/qwen-2.5-coder-32b-instruct",
          "max_tokens": 131072
        },
        {
          "display_name": "Google: Gemini Flash 2.0",
          "name": "google/gemini-2.0-flash-001",
          "max_tokens": 1000000
        }
      ]
    }
  },
  "assistant": {
    "default_model": {
      "provider": "openai",
      "model": "qwen/qwen-2.5-coder-32b-instruct"
    },
    "provider": {
      "api_url": "https://openrouter.ai/api/v1",
      "name": "openai"
    },
    "version": "2"
  }
}
